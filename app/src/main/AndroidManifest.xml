<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  package="com.rguzman.xyzreader">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.BROADCAST_STICKY" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme"
    android:usesCleartextTraffic="true">

    <uses-library android:name="org.apache.http.legacy" android:required="false"/>

    <activity
      android:name="com.rguzman.xyzreader.ui.ArticleListActivity"
      android:label="@string/app_name"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name="com.rguzman.xyzreader.ui.ArticleDetailActivity"
      android:parentActivityName="com.rguzman.xyzreader.ui.ArticleListActivity">
      <intent-filter tools:ignore="AppLinkUrlError">
        <action android:name="android.intent.action.VIEW" />
        <category android:name="android.intent.category.DEFAULT" />
        <data android:mimeType="vnd.android.cursor.item/vnd.com.rguzman.xyzreader.items" />
      </intent-filter>
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="com.rguzman.xyzreader.ui.ArticleListActivity" />
    </activity>

    <service
      android:name="com.rguzman.xyzreader.data.UpdaterService"
      android:exported="false" />

    <provider
      android:name="com.rguzman.xyzreader.data.ItemsProvider"
      android:authorities="com.rguzman.xyzreader"
      android:exported="false" />

  </application>

</manifest>
