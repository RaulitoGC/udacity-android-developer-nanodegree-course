<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.rguzman.techstore">

  <application
    android:name=".TechStoreApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".presentation.product.detail.ProductDetailActivity" />
    <activity android:name=".presentation.product.ProductListActivity" />
    <activity android:name=".presentation.login.LoginActivity"
      android:theme="@style/AppTheme.Dark">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <meta-data
      android:name="preloaded_fonts"
      android:resource="@array/preloaded_fonts" />
  </application>
</manifest>
